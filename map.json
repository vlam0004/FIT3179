{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {
    "text": "Population 2020",
    "orient": "top",
    "fontSize":20
  },
  "width": 1000,
  "height": 400,
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vlam0004/FIT3179/main/world.json",
        "format": {"type": "topojson", "feature": "world"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vlam0004/FIT3179/main/world.json",
        "format": {"type": "topojson", "feature": "world"}
      },
      "transform": [
        {
          "lookup": "properties.admin",
          "from": {
            "data": {
              "url": "https://github.com/vlam0004/FIT3179/blob/main/population_by_country_2020.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": ["Country (or dependency)"]
          }
        }
      ],
      "mark": "geoshape",
      "projection": {"type": "equirectangular"},
      "encoding": {"color": {"field": "Country (or dependency)", "type": "nominal","title":"Country"}}
    }
  ],
  "config": {}
}
